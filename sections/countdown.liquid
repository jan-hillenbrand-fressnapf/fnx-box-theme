{{ 'countdown-section.css' | asset_url | stylesheet_tag }}
<script src="{{ 'countdown-section.js' | asset_url }}" defer></script>

<div class="section-countdown section-padding center" data-countdown-date="{{ section.settings.date }}">
  <div class="page-width">
    {% if section.settings.subheading != empty %}
      <span class="countdown__subheading">
        {% render 'icon-truck' %}
        {{ section.settings.subheading }}
      </span>
    {% endif %}

    {% if section.settings.heading != empty %}
      <h1 class="countdown__heading">{{ section.settings.heading }}</h1>
    {% endif %}

    <div class="countdown">
      <div class="countdown__unit">
        Tage
        <span data-days>0</span>
      </div>
      <div class="countdown__unit">
        Stunden
        <span data-hours>0</span>
      </div>
      <div class="countdown__unit">
        Minuten
        <span data-minutes>0</span>
      </div>
      <div class="countdown__unit">
        Sekunden
        <span data-seconds>0</span>
      </div>
    </div>

    {% if section.settings.button_text != empty and section.settings.button_url != empty %}
      <div class="button-wrapper">
        <a href="{{ section.settings.button_url }}" class="button">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}

    {% if section.settings.link_text != empty and section.settings.link_url != empty %}
      <a href="{{ section.settings.link_url }}" class="link">
        {{ section.settings.link_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Countdown",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "date",
      "label": "Date",
      "info": "Format: 2023-02-01T01:00:00.000Z",
      "default": "2023-02-01T01:00:00.000Z"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Countdown"
    }
  ]
}
  {% endschema %}
