{
  "wrapper": "#product-page",
  "sections": {
    "main": {
      "type": "item-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "disabled": true,
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "347ff3ee-3ac0-4187-b540-b21d8b62a2a6": {
          "type": "shopify:\/\/apps\/product-reviews\/blocks\/star_rating\/bae150af-8da8-48b2-9867-398188115e5f",
          "settings": {
            "stars_fill_color": "#000000",
            "star_size": 15,
            "text_align": "center",
            "product": "{{product}}",
            "stars_text_empty": "No reviews"
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Teilen"
          }
        },
        "2c2e2109-19b6-4abf-b89b-10aabe41051f": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": false,
            "button-type": "primary"
          }
        },
        "21a5e6ff-3d05-41ca-8d9f-c281aee8e6a1": {
          "type": "shopify:\/\/apps\/product-reviews\/blocks\/reviews\/bae150af-8da8-48b2-9867-398188115e5f",
          "settings": {
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "347ff3ee-3ac0-4187-b540-b21d8b62a2a6",
        "caption",
        "price",
        "description",
        "share",
        "2c2e2109-19b6-4abf-b89b-10aabe41051f",
        "21a5e6ff-3d05-41ca-8d9f-c281aee8e6a1"
      ],
      "settings": {
        "enable_sticky_info": true,
        "gallery_layout": "thumbnail_slider",
        "media_size": "small",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 100
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "disabled": true,
      "settings": {
        "heading": "You may also like",
        "color_scheme": "background-1",
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
}
